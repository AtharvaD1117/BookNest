{
  "name": "book-nest.ui",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "ng serve --port 4200",
    "build": "ng build --configuration production --no-prerender",
    "test": "ng test",
    "e2e": "npx playwright test",
    "ci:test": "npm run build && (npm run start &) && npx wait-on http://localhost:4200 && npx playwright test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.9",
    "@angular/forms": "^20.3.9",
    "@angular/platform-browser": "^20.3.9",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.9",
    "@angular/ssr": "^20.3.7",
    "axios": "^1.12.2",
    "bootstrap": "^5.3.8",
    "express": "^5.1.0",
    "powerbi-client": "^2.23.9",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.7",
    "@angular/cli": "^20.3.7",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.56.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.24",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.1"
  }
}
